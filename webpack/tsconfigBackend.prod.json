{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "./",
    "removeComments": true,
    "allowUnusedLabels": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "_actions":           [ "./store/actions/index" ],
      "_blocks":            [ "./view/block/index" ],
      "_config":            [ "./server/config" ],
      "_utils/*":           [ "./utils/*" ],
      "_components/*":      [ "./view/components/*" ],
      "_containers/*":      [ "./view/containers/*" ],
      "_models":            [ "./server/db/models" ],
      "_reducers":          [ "./store/reducers/index" ],
      "_reducer/*":         [ "./store/reducers/*" ],
      "_route":             [ "./route/index" ],
      "_store":             [ "./store/index" ],
      "_static/*":          [ "./static/*" ],
      "_images/*":          [ "./static/images/*" ],
      "_stylesLoad/*":      [ "./styles/*" ],
      "_style":             [ "./styles/index" ],
      "_server/*":          [ "./server/*" ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./server/**/*",
    "./route/**/*",
    "./store/**/*",
    "./styles/**/*",
    "./view/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": ".gulp/ts",
    "useTranspileModule": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
