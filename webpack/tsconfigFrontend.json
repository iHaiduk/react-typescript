{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2015",
    "lib": [ "es2015", "es2015.promise", "dom" ],
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "allowUnusedLabels": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "_actions":         ["./store/actions/index"],
      "_blocks/*":        ["./view/block/*"],
      "_components/*":    ["./view/components/*"],
      "_containers/*":    ["./view/containers/*"],
      "_helpers/*":       ["./helpers/*"],
      "_reducers":        ["./store/reducers/index"],
      "_route":           ["./route/index"],
      "_store":           ["./store/index"],
      "_static/*":        ["./static/*"],
      "_images/*":        ["./static/images/*"],
      "_stylesLoad/*":    ["./styles/*"],
      "_style":           ["./styles/index"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./client/**/*",
    "./route/**/*",
    "./helpers/**/*",
    "./store/**/*",
    "./static/**/*",
    "./styles/**/*",
    "./view/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": false,
    "useCache": true,
    "cacheDirectory": ".gulp/ts",
    "useTranspileModule": true,
    "silent": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
