{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "./",
    "removeComments": true,
    "allowUnusedLabels": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "_actions": [
        "./store/actions/index"
      ],
      "_blocks/*": [
        "./view/block/*"
      ],
      "_config": [
        "./server/config"
      ],
      "_helpers/*": [
        "./helpers/*"
      ],
      "_components/*": [
        "./view/components/*"
      ],
      "_containers/*": [
        "./view/containers/*"
      ],
      "_reducers": [
        "./store/reducers/index"
      ],
      "_route": [
        "./route/index"
      ],
      "_store": [
        "./store/index"
      ],
      "_static/*": [
        "./static/*"
      ],
      "_images/*":        ["./static/images/*"],
      "_stylesLoad/*": [
        "./styles/*"
      ],
      "_style": [
        "./styles/index"
      ],
      "_server/*": [
        "./server/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./server/**/*",
    "./route/**/*",
    "./store/**/*",
    "./styles/**/*",
    "./view/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": ".gulp/ts",
    "useTranspileModule": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
